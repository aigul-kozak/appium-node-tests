{
  "name": "appium-boilerplate-e2e",
  "type": "module",
  "description": "Boilerplate project to run WebdriverIO tests with Appium to test native applications on iOS and Android",
  "engines": {
    "node": "^16.17.0 || >=18.0.0"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^8.43.0",
    "@wdio/appium-service": "^8.46.0",
    "@wdio/browserstack-service": "^8.47.0",
    "@wdio/cli": "^8.46.0",
    "@wdio/junit-reporter": "^8.14.0",
    "@wdio/local-runner": "^8.46.0",
    "@wdio/mocha-framework": "^8.46.0",
    "@wdio/spec-reporter": "^8.43.0",
    "allure-commandline": "^2.34.1",
    "appium": "^3.1.0",
    "appium-uiautomator2-driver": "^2.29.4",
    "gh-pages": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "wdio-wait-for": "^3.0.6"
  },
  "scripts": {
  "test:android": "wdio run ./config/wdio.conf.android.ts",
  "test:ios": "wdio run ./config/wdio.conf.ios.ts",
  "allure": "npx allure serve ./allure-results",
  "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
  "allure:publish": "npx gh-pages -d allure-report --message 'update report' --no-history --force"
},
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
